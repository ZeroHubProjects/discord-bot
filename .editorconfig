# https://editorconfig.org/

root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml,json,toml,js,html,css}]
indent_style = space
indent_size = 2

# Trailing whitespace allows to make line breaks in Markdown
# See https://github.com/tgstation/tgstation/pull/55951
[*.md]
trim_trailing_whitespace = false

[{*.txt,.env}]
insert_final_newline = false

[Dockerfile]
indent_style = space

[.gitattributes]
indent_style = space
indent_size = 4
insert_final_newline = false
